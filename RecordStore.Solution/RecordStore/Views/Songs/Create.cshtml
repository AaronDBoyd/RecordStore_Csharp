@{
  Layout = "_Layout";
}

@model RecordStore.Models.Song

<h4>Add a new song</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Title)
  @Html.TextBoxFor(model => model.Title)

  @Html.LabelFor(model => model.Album)
  @Html.DropDownList("AlbumId")

  <input type="submit" value="Add new song" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all songs", "Index")</p>