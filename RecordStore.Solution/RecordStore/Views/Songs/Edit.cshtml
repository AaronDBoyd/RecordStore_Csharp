@{
  Layout = "_Layout";
}

@model RecordStore.Models.Song

<h2 class="title">Edit</h2>

<h4>Edit this song: @Html.DisplayFor(model => model.Title)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.SongId)

  @Html.LabelFor(model => model.Title)
  @Html.EditorFor(model => model.Title)

  @Html.LabelFor(model => model.Album)
  @Html.DropDownList("AlbumId")

  <input type="submit" value="Save" class="list__link btn btn-outline-dark" />
}
<br/>
<p class="btn btn-dark btn-block">@Html.ActionLink("Back to list", "Index")</p>