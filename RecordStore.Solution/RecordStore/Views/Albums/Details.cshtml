@{
  Layout = "_Layout";
}

@model RecordStore.Models.Album

<h2 class="title">Album Details</h2>

<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)<h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This album does not contain any artists</p>
}
else
{
  <h4>Artists the Album are:</h4>
  
  @foreach(var join in Model.JoinEntities)
  {
    <p class="list__link btn btn-outline-dark btn-block">@Html.ActionLink($"{join.Artist.Name}", "Details", "Artists", new { id = join.Artist.ArtistId })</p>
  }
}

<br/>
<p class="btn btn-dark btn-block">@Html.ActionLink("Edit Album", "Edit", new { id = Model.AlbumId })</p>
<p class="btn btn-dark btn-block">@Html.ActionLink("Delete Album", "Delete", new { id = Model.AlbumId })</p>
<br/>
<p class="btn btn-dark btn-block">@Html.ActionLink("Back to list", "Index")</p>