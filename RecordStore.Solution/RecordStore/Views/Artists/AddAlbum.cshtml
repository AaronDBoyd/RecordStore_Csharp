@{
  Layout = "_Layout";
}

@model RecordStore.Models.Artist

<h2 class="title">Add an Album</h2>

<h4>Add an Album to this Artist: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.ArtistId)

    @Html.Label("Select Album")
    @Html.DropDownList("AlbumId")

    <input type="submit" value="Save" class="list__link btn btn-outline-dark" />
}
<br/>
<p class="btn btn-dark btn-block">@Html.ActionLink("Back to list", "Index")</p>