@{
  Layout = "_Layout";
}

@model RecordStore.Models.Artist

<h4>Add a new Artist</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.Label("Select Album")
  @Html.DropDownList("AlbumId")

  <input type="submit" value="Add new Artist" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all Artists", "Index")</p>