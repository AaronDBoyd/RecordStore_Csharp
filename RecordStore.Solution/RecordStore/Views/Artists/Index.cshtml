@{
  Layout = "_Layout";
}

@using RecordStore.Models;
@model List<RecordStore.Models.Artist>;

<h1 class="title">Artists</h1>

@if (@Model.Count == 0)
{
  <h3>No Artists have been added yet!</h3>
} 

@foreach (Artist artist in Model)
{
  <p class="list__link btn btn-outline-dark btn-block">@Html.ActionLink($"{artist.Name}", "Details", new { id = artist.ArtistId })</p>
}

<p class="btn btn-dark btn-block">@Html.ActionLink("Add new Artist", "Create")</p>

